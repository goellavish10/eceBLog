<div class="spinner-wrapper">
<div class="spinner"></div>
</div>
<h1 style="color: #000000;">Stories from,</h1>
<div class="row">
    <div class="col s12 m4 single-user-card">
        <div class="card center-align" style="border-radius: 10px; background-color: #aacfd5ff;">
            <div class="card-content">
                <span class="card-title single-username" style="font-weight: bold;color:#298a91ff;">{{detail.displayName}}</span>
                <img src="{{detail.image}}" class="circle responsive-img img-small single-userimage" style="width: 155px;">
            </div>
        </div>
    </div>
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-content center-align" style="background-color: #298a91ff;">
                <h5 style="color: #fff;" class="story-title-resp">{{truncate title 12}}</h5>
                {{!-- <p style="color: white;">{{stripTags (truncate body 100)}}</p> --}}
                <br>
                <br>
                <div class="chip resp-chip">
                    <img src="{{user.image}}" alt="" class="userimage">
                    <a href="/stories/user/{{user._id}}" class="username">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/publicStories/{{_id}}" class="btn grey read-btn-resp">Read The Post</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories to display</p>
    {{/each}}
</div>