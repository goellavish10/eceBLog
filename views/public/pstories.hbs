<div class="spinner-wrapper">
<div class="spinner"></div>
</div>
<h1 style="color: #000000;text-align: center;">All Posts</h1>
<div class="row">    
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-content center-align" style="background-color: #298a91ff;">
                <h5 style="color: #fff;" class="story-title-resp">{{truncate title 16}}</h5>
                <p style="color: rgb(190, 190, 190);">category: {{category}}</p>
                <br>
                <br>
                <div class="chip resp-chip">
                    <img src="{{user.image}}" alt="{{user.displayName}}" class="userimage">
                    <a href="/singleUser/user/{{user._id}}" class="username">{{truncate user.displayName 21}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/publicStories/{{_id}}" class="btn grey read-btn-resp">Read the Post</a>
                {{#if comments}}
                <a href="/stories/{{_id}}/comments" class="btn grey read-btn-resp" style="margin-top: 6px;">Read the Comments</a>
                {{else}}
                <a href="/login" class="btn grey read-btn-resp" style="margin-top: 6px;" class="tooltipped" data-position="top" data-tooltip="Login to Comment & Like">Comment on Post</a>
                {{/if}}
            </div>
            <div class="card-action center-align">
                {{#if comments}}
                <i class="fas fa-comment"></i>    {{comments.length}}
                {{else}}
                <i class="fas fa-comment"></i>    0
                {{/if}}
                {{#if visits}}
                <i class="fas fa-eye"></i> {{visits}}
                {{else}}
                <i class="fas fa-eye"></i> 0
                {{/if}}
                {{#if likers}}
                <i class="fas fa-thumbs-up"></i> {{likers}}
                {{else}}
                <i class="fas fa-thumbs-up"></i> 0
                {{/if}}
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories to display</p>
    {{/each}}
</div>
